<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.aklni.islammahoud.aklnii.Fragments.SigninFragment"
    android:id="@+id/container">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <LinearLayout
          android:id="@+id/login"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_centerVertical="true"
          android:layout_margin="20dp"
          android:visibility="visible"
          >
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              >
              <com.hbb20.CountryCodePicker
                  android:id="@+id/ccp"
                  android:layout_width="100dp"
                  android:layout_height="wrap_content"
                  app:ccp_countryPreference="eg"
                  android:visibility="gone"

                  />
              <android.support.design.widget.TextInputLayout
                  android:id="@+id/input_phone"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                  <EditText
                      android:id="@+id/phonenum"
                      android:inputType="phone"
                      android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:layout_marginRight="20dp"
                      android:layout_marginLeft="20dp"
                      android:theme="@style/EditText"
                      android:hint="رقم الموبايل"
                      android:textAlignment="center"
                      android:layout_marginBottom="20dp"
                      android:textColor="@color/colorPrimary"
                      android:textDirection="ltr"/>
              </android.support.design.widget.TextInputLayout>
          </LinearLayout>
          <Button
              android:id="@+id/submit"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignBottom="@+id/phonenum"
              android:layout_gravity="center"
              android:layout_marginTop="10dp"
              android:background="@drawable/login_button"
              android:textColor="@color/text"
              android:textSize="22dp"
              android:text="تسجيل الدخول"
              android:layout_marginRight="50dp"
              android:layout_marginLeft="50dp"
              />
          <Button
              android:id="@+id/new_register"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignBottom="@+id/phonenum"
              android:layout_gravity="center"
              android:layout_marginTop="10dp"
              android:background="@drawable/login_button"
              android:textColor="@color/text"
              android:textSize="22dp"
              android:layout_marginRight="50dp"
              android:layout_marginLeft="50dp"
              android:text="مستخدم جديد"/>

      </LinearLayout>
      <ProgressBar
          android:layout_width="150dp"
          android:layout_height="150dp"
          android:id="@+id/prog"
          android:layout_centerHorizontal="true"
          android:layout_centerVertical="true"
          android:gravity="center"
          android:layout_gravity="center"
          android:layout_margin="20dp"
          android:indeterminateDrawable="@drawable/prograssbar"
          android:background="@mipmap/aklniring"
          android:visibility="gone"/>
  </RelativeLayout>

</FrameLayout>
